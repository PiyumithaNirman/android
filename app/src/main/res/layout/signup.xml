<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/hhhh"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        style="@style/textView_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Creative Project Manager Registration" />

    <EditText
        android:id="@+id/TFname"
        style="@style/editText_style"
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:hint="Name"
        android:textColorHint="#c8ccc9"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/TFemail"
        style="@style/editText_style"
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:ems="10"
        android:hint="example@gmail.com"
        android:inputType="textPersonName"
        android:textColorHint="#c8ccc9" />

    <EditText
        android:id="@+id/TFuname"
        style="@style/editText_style"
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="258dp"
        android:ems="10"
        android:hint="User Name"
        android:textColorHint="#c8ccc9"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/TFpass1"
        style="@style/editText_style"
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="206dp"
        android:ems="10"
        android:hint="Password(6 or more)"
        android:inputType="textPassword"
        android:textColorHint="#c8ccc9" />

    <EditText
        android:id="@+id/TFpass2"
        style="@style/editText_style"
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="142dp"
        android:ems="10"
        android:textColorHint="#c8ccc9"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/Bsignupbutton"
        style="@style/button_style"
        android:layout_width="296dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp"
        android:onClick="onSignUpClick"
        android:text="Sign Up"
        android:visibility="visible" />


</RelativeLayout>
